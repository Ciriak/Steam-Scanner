{
  "name": "steamer",
  "version": "1.0.0",
  "description":
    "Electron app that automatically add your game to you Steam library",
  "main": "app.js",
  "scripts": {
    "postinstall":
      "./node_modules/.bin/electron-rebuild && gulp clean:dist && gulp default && tsc ./src/app.ts --outDir ./dist/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsc ./src/app.ts --outDir ./dist/ --watch",
    "build": "tsc ./src/app.ts --outDir ./dist/ && gulp build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nj-neer/steamer.git"
  },
  "keywords": ["steam", "electron", "game", "sync", "uplay", "origin"],
  "author": "Cyriaque DELAUNAY",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nj-neer/steamer/issues"
  },
  "homepage": "https://github.com/nj-neer/steamer#readme",
  "dependencies": {
    "auto-launch": "^5.0.5",
    "drivelist": "^6.1.3",
    "electron-is-dev": "^0.3.0",
    "fs-extra": "^5.0.0",
    "lodash": "^4.17.5",
    "node-notifier": "^5.2.1",
    "node-steam-shortcuts": "^1.1.0",
    "object-path": "^0.11.4",
    "process-list": "^1.2.2",
    "recursive-readdir": "^2.2.2",
    "steam-shortcut-editor": "^3.1.1",
    "ts-object-path": "^0.1.2",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "electron": "^1.8.4",
    "@types/electron": "^1.6.10",
    "@types/es6-promise": "^3.3.0",
    "@types/fs-extra": "^5.0.1",
    "@types/lodash": "^4.14.106",
    "@types/object-path": "^0.9.29",
    "@types/xml2js": "^0.4.2",
    "del": "^3.0.0",
    "electron-builder": "^20.8.1",
    "electron-rebuild": "^1.7.3",
    "gulp": "^3.9.1",
    "gulp-sync": "^0.1.4"
  },
  "build": {
    "appId": "com.cyriaque.steamer",
    "productName": "Steamer",
    "directories": {
      "app": "./dist",
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "publish": "github",
      "icon": "dist/assets/steamer.ico"
    },
    "nsis": {
      "artifactName": "${productName}-setup-${version}.${ext}",
      "installerIcon": "dist/assets/steamer.ico",
      "differentialPackage": false
    },
    "asar": {
      "smartUnpack": false
    },
    "linux": {
      "icon": "dist/assets/steamer.ico",
      "category": "Development"
    },
    "appImage": {
      "publish": false,
      "systemIntegration": "doNotAsk",
      "category": "Development",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
