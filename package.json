{
  "name": "steamer",
  "version": "1.0.0",
  "description": "Electron app that automatically add your game to you Steam library",
  "main": "app.js",
  "scripts": {
    "postinstall": "./node_modules/.bin/electron-rebuild && tsc ./src/app.ts --outDir ./dist/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsc ./src/app.ts --outDir ./dist/ --watch",
    "build": "tsc ./src/app.ts --outDir ./dist/ && electron dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nj-neer/steamer.git"
  },
  "keywords": [
    "steam",
    "electron",
    "game",
    "sync",
    "uplay",
    "origin"
  ],
  "author": "Cyriaque DELAUNAY",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nj-neer/steamer/issues"
  },
  "homepage": "https://github.com/nj-neer/steamer#readme",
  "dependencies": {
    "@types/electron": "^1.6.10",
    "@types/fs-extra": "^5.0.1",
    "@types/lodash": "^4.14.106",
    "drivelist": "^6.1.3",
    "electron": "^1.8.4",
    "fs-extra": "^5.0.0",
    "lodash": "^4.17.5",
    "node-steam-shortcuts": "^1.1.0",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/es6-promise": "^3.3.0",
    "electron-rebuild": "^1.7.3"
  }
}
